{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "declaration": true
    },
    "include": ["*.ts", "types.d.ts"],
    "exclude": ["node_modules", "dist"]
}
