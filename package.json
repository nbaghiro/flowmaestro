{
    "name": "flowmaestro",
    "version": "1.0.0",
    "description": "LLM Agent Orchestration System",
    "private": true,
    "workspaces": [
        "frontend",
        "backend",
        "shared",
        "marketing"
    ],
    "scripts": {
        "prepare": "husky",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "npm run dev --workspace=backend",
        "dev:frontend": "npm run dev --workspace=frontend",
        "dev:marketing": "npm run dev --workspace=marketing",
        "build": "npm run build --workspaces",
        "test": "npm run test --workspace=backend",
        "test:unit": "npm run test:unit --workspace=backend",
        "test:integration": "npm run test:integration --workspace=backend",
        "test:e2e": "npm run test:e2e --workspace=frontend",
        "test:coverage": "npm run test:coverage --workspace=backend",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
        "typecheck": "npm run typecheck --workspaces",
        "db:migrate": "npm run db:migrate --workspace=backend",
        "db:seed": "npm run db:seed --workspace=backend",
        "db:reset": "npm run db:reset --workspace=backend",
        "docker:up": "docker-compose -f infra/local/docker-compose.yml up -d",
        "docker:down": "docker-compose -f infra/local/docker-compose.yml down",
        "docker:logs": "docker-compose -f infra/local/docker-compose.yml logs -f",
        "docker:clean": "docker-compose -f infra/local/docker-compose.yml down && docker volume rm flowmaestro_postgres_data flowmaestro_postgres_test_data flowmaestro_mongo_test_data flowmaestro_redis_data 2>/dev/null || true && docker volume create flowmaestro_postgres_data && docker volume create flowmaestro_postgres_test_data && docker volume create flowmaestro_mongo_test_data && docker volume create flowmaestro_redis_data",
        "docker:reset": "npm run docker:clean && npm run docker:up && sleep 5 && npm run db:migrate"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "concurrently": "^8.2.2",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "prettier": "^3.2.5",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "author": "FlowMaestro Team",
    "license": "MIT"
}
